<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etx_value1"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edit_text"
        android:digits="1234567890"
        android:inputType="textFilter"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/etx_value2"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/etx_value1"
        android:background="@drawable/rounded_edit_text"
        android:digits="1234567890"
        android:inputType="textFilter"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etx_value2"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Result:"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txt_result_value"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etx_value2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/txt_result"
        android:background="@drawable/rounded_edit_text"
        android:inputType="number"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_result"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="25dp"
        android:text="+"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_result_value"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"
        android:layout_toRightOf="@id/btn_add"
        android:text="-"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_mul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_add"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="25dp"
        android:text="*"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_sub"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"
        android:layout_toRightOf="@id/btn_mul"
        android:text="/"
        android:textSize="30sp" />


</RelativeLayout>